<?xml version="1.0" standalone="no"?>
<unit>
  <parameters>
    <armor-type value="void"/>
    <time value="25"/>
    <multi-selection value="true"/>
    <cellmap value="false"/>
    <fields>
      <field value="land"/>
    </fields>
    <properties>
      <property value="burnable"/>
    </properties>
    <tags>
      <tag value="building"/>
      <tag value="fort"/>
    </tags>
    <meeting-point value="false"/>
  </parameters>
  <item-limit limit="60"/>
  <resource-stores>
    <resource status="stockpile" type="wealth" stored="5000"/>
    <resource status="stockpile" type="logs" stored="1000"/>
    <resource status="stockpile" type="stone" stored="500"/>
  </resource-stores>
  <creatable-type>
    <size value="5"/>
    <height value="2"/>
    <stats>
      <max-hp value="15000" regeneration="0"/>
      <max-ep value="0" regeneration="0"/>
      <max-sp value="0" regeneration="0"/>
      <max-cp value="-1" />
      <sight value="10"/>
      <armor value="0"/>
    </stats>
    <producible>
      <time value="10"/>
      <properties/>
      <light enabled="false"/>
      <unit-requirements/>
      <upgrade-requirements/>
        <resource-requirements>
          <resource name="wealth" amount="5000" plus="0" multiply="0"/>
          <resource name="population" amount="-10" plus="0" multiply="0"/>
        </resource-requirements>
      <image path="images/castle.bmp"/>
      <image-cancel path="../ranger/images/tech_cancel.bmp"/>
    </producible>
    <resource-production>
      <resources-stored>
        <resource name="wealth" amount="100000"/>
        <resource name="logs" amount="100000"/>
        <resource name="stone" amount="100000"/>
        <resource name="space" amount="20"/>
      </resources-stored>
      <resources-created>
        <resource name="wealth" amount="250" timer="30" scope="faction" />
      </resources-created>
    </resource-production>
    <unit-production>
        <units-created>
          <unit name="tax_collector" amount="2" timer="10" cap="-1"/>
        </units-created>
    </unit-production>
    <units-owned>
      <unit name="royal_guard" limit="6"/>
      <unit name="tax_collector" limit="2"/>
      <unit name="quartermaster" limit="2"/>
    </units-owned>
    <actions>
      <skills>
        <skill>
          <type value="stop"/>
          <name value="stop_skill"/>
          <ep-cost value="0" />
          <speed value="50" />
          <anim-speed value="100" />
          <animation path="models/keep.g3d" />
          <sound enabled="false" />
        </skill>
        <skill>
          <type value="be_built" />
          <name value="be_built_skill"/>
          <ep-cost value="0" />
          <speed value="300" />
          <anim-speed value="300" />
          <animation path="models/castlebeingbuilt.g3d" />
          <sound enabled="false" />
        </skill>
        <skill>
          <type value="die" />
          <name value="die_skill"/>
          <ep-cost value="0" />
          <speed value="300" />
          <anim-speed value="300" />
          <animation path="models/keep_die.g3d" />
          <sound enabled="true" start-time="0">
            <sound-file path="sounds/tech_building_fall4.wav"/>
          </sound>
          <fade value="false"/>
        </skill>
        <skill>
          <type value="produce" />
          <name value="produce_skill"/>
          <ep-cost value="0" />
          <speed value="300" />
          <anim-speed value="300" />
          <animation path="models/keep.g3d" />
          <sound enabled="false" />
        </skill>
        <skill>
          <type value="build"/>
          <name value="build_skill"/>
          <ep-cost value="0"/>
          <speed value="500"/>
          <anim-speed value="100"/>
          <animation path="models/keep.g3d"/>
          <sound enabled="false"/>
        </skill>
        <skill> 
          <type value="load" /> 
          <name value="load_skill" /> 
          <ep-cost value="0" /> 
          <speed value="120" /> 
          <anim-speed value="120" /> 
          <animation path="models/keep.g3d" /> 
          <sound enabled="false"/>
          <max-range value="3" /> 
          <particles value="false"/>
        </skill>
        <skill>
          <type value="unload"/>
          <name value="unload_skill"/>
          <ep-cost value="0"/>
          <speed value="120"/>
          <anim-speed value="120"/>
          <animation path="models/keep.g3d"/>
          <sound enabled="false"/>
          <max-range value="3"/>
        </skill>
      </skills>
      <commands>
        <command>
          <type value="produce"/>
          <name value="produce_royal_guard" tip="royal_guard_info"/>
          <image path="../royal_guard/images/ghost_armor.bmp"/>
          <unit-requirements />
          <upgrade-requirements />
          <produce-skill value="produce_skill"/>
          <produced-unit name="royal_guard"/>
        </command>
        <command>
          <type value="produce"/>
          <name value="produce_quartermaster" tip="quartermaster_info"/>
          <image path="../quartermaster/images/worker.bmp"/>
          <unit-requirements />
          <upgrade-requirements />
          <produce-skill value="produce_skill"/>
          <produced-unit name="quartermaster"/>
        </command>
        <command>
          <type value="load"/>
          <name value="load"/>
          <image path="images/castle.bmp"/>
          <unit-requirements/>
          <upgrade-requirements/>
          <load-skill value="load_skill"/>
          <units-carried>
            <unit value="tax_collector"/>
            <unit value="quartermaster"/>
          </units-carried>
          <load-capacity value="12" />
          <allow-projectiles value="false"/>
        </command>
        <command>
        <type value="unload"/>
        <name value="unload"/>
        <image path="images/castle.bmp"/>
        <unit-requirements/>
        <upgrade-requirements/>
        <unload-skill value="unload_skill"/>
        </command>
        <command>
          <type value="structure"/>
          <name value="build_guard_barracks"/>
          <image path="../guard_barracks/images/castle.bmp"/>
          <unit-requirements/>
          <upgrade-requirements/>
          <build-skill value="build_skill"/>
          <buildings>
            <building name="guard_barracks" tip="guard_barracks_info"/>
          </buildings>
          <start-sound enabled="false"/>
          <built-sound enabled="false"/>
        </command>
        <command>
          <type value="structure"/>
          <name value="build_guard_tower"/>
          <image path="../guard_tower/images/defense_tower.bmp"/>
          <unit-requirements/>
          <upgrade-requirements/>
          <build-skill value="build_skill"/>
          <buildings>
            <building name="guard_tower" tip="guard_tower_info"/>
          </buildings>
          <start-sound enabled="false"/>
          <built-sound enabled="false"/>
        </command>
      </commands>
    </actions>
  </creatable-type>
    <selection-sounds enabled="true">
      <sound path="sounds/tech_click.wav" />
    </selection-sounds>
    <command-sounds enabled="true">
      <sound path="sounds/tech_click.wav" />
    </command-sounds>
</unit>