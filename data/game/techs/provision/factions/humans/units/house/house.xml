<?xml version="1.0" standalone="no"?>
<unit>
  <parameters>
    <armor-type value="void"/>
    <time value="25"/>
    <multi-selection value="true"/>
    <fields>
      <field value="land"/>
    </fields>
    <properties>
      <property value="burnable"/>
    </properties>
    <tags>
      <tag value="building"/>
      <tag value="house"/>
      <tag value="faction"/>
    </tags>
    <meeting-point value="false"/>
    <cellmap value="false"/>
  </parameters>
  <item-limit limit="60"/>
  <resource-stores>
    <resource status="good" type="wealth" stored="0"/>
    <resource status="good" type="meat" stored="25"/>
    <resource status="good" type="fowl" stored="25"/>
    <resource status="good" type="eggs" stored="25"/>
    <resource status="good" type="milk" stored="25"/>
    <resource status="good" type="cheese" stored="25"/>
    <resource status="good" type="bread" stored="25"/>
    <resource status="good" type="honey" stored="25"/>
    <resource status="good" type="grapes" stored="25"/>
    <resource status="good" type="wine" stored="25"/>
    <resource status="good" type="water" stored="25"/>
    <resource status="good" type="linen" stored="25"/>
    <resource status="good" type="cloth" stored="25"/>
    <resource status="good" type="corn" stored="25"/>
  </resource-stores>
  <creatable-type>
    <size value="2"/>
    <height value="2"/>
    <statistics>
      <enhancement>
	<resource-pools>
	  <health name="health">
	    <max-stat value="500"/>
	  </health>
	</resource-pools>
	<unit-stats>
	  <sight value="10" value-mult="0"/>
	</unit-stats>
      </enhancement>
    </statistics>
    <producible>
      <time value="10"/>
      <properties/>
      <light enabled="false"/>
      <unit-requirements/>
      <upgrade-requirements/>
        <resource-requirements>
          <resource name="wealth" amount="200" plus="0" multiply="0"/>
          <resource name="population" amount="-20" plus="0" multiply="0"/>
          <resource name="labor" amount="-2" plus="0" multiply="0"/>
          <resource name="stone" amount="10" plus="0" multiply="0"/>
          <resource name="logs" amount="25" plus="0" multiply="0"/>
        </resource-requirements>
      <image path="images/worker.bmp"/>
      <image-cancel path="../castle/images/tech_cancel.bmp"/>
      </producible>
    <resource-production>
		<resources-stored>
			<resource name="wealth" amount="100000"/>
			<resource name="meat" amount="100000"/>
			<resource name="fowl" amount="100000"/>
			<resource name="eggs" amount="100000"/>
			<resource name="milk" amount="100000"/>
			<resource name="cheese" amount="100000"/>
			<resource name="bread" amount="100000"/>
			<resource name="honey" amount="100000"/>
			<resource name="grapes" amount="100000"/>
			<resource name="wine" amount="100000"/>
			<resource name="water" amount="100000"/>
			<resource name="linen" amount="100000"/>
			<resource name="cloth" amount="100000"/>
			<resource name="wool" amount="100000"/>
			<resource name="corn" amount="100000"/>
			<resource name="citizens" amount="10"/>
		</resources-stored>
		<resources-created>
			<resource name="wealth" amount="50" timer="30" scope="local"/>
		</resources-created>
		<starter-resources>
			<resource name="citizens" amount="5"/>
		</starter-resources>
    </resource-production>
    <processing>
        <processes>
          <process timer="30" count="3" scope="local">
            <costs>
              <cost name="meat" consume="true" amount="1"/>
            </costs>
            <products>
              <product name="wealth" amount="5"/>
            </products>
          </process>
          <process timer="30" count="3" scope="local">
            <costs>
              <cost name="fowl" consume="true" amount="1"/>
            </costs>
            <products>
              <product name="wealth" amount="4"/>
            </products>
          </process>
          <process timer="30" count="3" scope="local">
            <costs>
              <cost name="eggs" consume="true" amount="1"/>
            </costs>
            <products>
              <product name="wealth" amount="4"/>
            </products>
          </process>
          <process timer="30" count="3" scope="local">
            <costs>
              <cost name="linen" consume="true" amount="1"/>
            </costs>
            <products>
              <product name="wealth" amount="4"/>
            </products>
          </process>
          <process timer="30" count="3" scope="local">
            <costs>
              <cost name="cloth" consume="true" amount="1"/>
            </costs>
            <products>
              <product name="wealth" amount="4"/>
            </products>
          </process>
          <process timer="30" count="3" scope="local">
            <costs>
              <cost name="wool" consume="true" amount="1"/>
            </costs>
            <products>
              <product name="wealth" amount="3"/>
            </products>
          </process>
          <process timer="30" count="3" scope="local">
            <costs>
              <cost name="wine" consume="true" amount="1"/>
            </costs>
            <products>
              <product name="wealth" amount="5"/>
            </products>
          </process>
          <process timer="30" count="3" scope="local">
            <costs>
              <cost name="grapes" consume="true" amount="1"/>
            </costs>
            <products>
              <product name="wealth" amount="3"/>
            </products>
          </process>
        </processes>
    </processing>
    <unit-production>
      <units-created>
        <unit name="householder" amount="1" timer="30" scope="local"/>
      </units-created>
    </unit-production>
    <units-owned>
      <unit name="educated_citizen" limit="10"/>
      <unit name="householder" limit="1"/>
      <unit name="peasant" limit="1"/>
    </units-owned>
    <actions>
      <skills>
        <skill>
          <type value="stop"/>
          <name value="stop_skill"/>
          <ep-cost value="0" />
          <speed value="50" />
	  <sounds-animations>
            <anim-speed value="100" />
            <animation path="models/peasant_hut.g3d" />
            <sound enabled="false" />
	  </sounds-animations>
        </skill>
        <skill>
          <type value="be_built" />
          <name value="be_built_skill"/>
          <ep-cost value="0" />
          <speed value="300" />
	  <sounds-animations>
            <anim-speed value="300" />
            <animation path="../castle/construction_models/barracks_construction.g3d" />
            <sound enabled="false" />
	  </sounds-animations>
        </skill>
        <skill>
          <type value="produce" />
          <name value="produce_skill"/>
          <ep-cost value="0" />
          <speed value="300"/>
	  <sounds-animations>
            <anim-speed value="300" />
            <animation path="models/peasant_hut.g3d" />
            <sound enabled="false" />
	  </sounds-animations>
        </skill>
        <skill>
          <type value="die" />
          <name value="die_skill"/>
          <ep-cost value="0" />
          <speed value="300" />
	  <sounds-animations>
            <anim-speed value="300" />
            <animation path="../castle/destruction_models/barracks_destruction.g3d" />
            <sound enabled="true" start-time="0">
              <sound-file path="sounds/tech_building_fall4.wav"/>
            </sound>
	  </sounds-animations>
          <fade value="false"/>
        </skill>
        <skill> 
          <type value="load" /> 
          <name value="load_skill" /> 
          <ep-cost value="0" /> 
          <speed value="120" />
          <max-range value="3" />
	  <sounds-animations>
            <anim-speed value="120" /> 
            <animation path="models/peasant_hut.g3d" /> 
            <sound enabled="false"/>
	  </sounds-animations>
          <particles value="false"/>
        </skill>
        <skill>
          <type value="unload"/>
          <name value="unload_skill"/>
          <ep-cost value="0"/>
          <speed value="120"/>
	  <sounds-animations>
            <anim-speed value="120"/>
            <animation path="models/peasant_hut.g3d"/>
            <sound enabled="false"/>
	  </sounds-animations>
          <max-range value="3"/>
        </skill>
      </skills>
      <commands>
        <command>
          <type value="produce"/>
          <name value="produce_peasant" tip="peasant_info"/>
          <image path="images/worker.bmp"/>
          <unit-requirements />
          <upgrade-requirements />
          <produce-skill value="produce_skill"/>
          <produced-unit name="peasant"/>
        </command>
        <command>
        <type value="load"/>
        <name value="load"/>
        <image path="images/worker.bmp"/>
        <unit-requirements/>
        <upgrade-requirements/>
        <load-skill value="load_skill"/>
        <units-carried>
            <unit value="peasant"/>
            <unit value="householder"/>
        </units-carried>
        <load-capacity value="5" />
            <allow-projectiles value="false"/>
        </command>
        <command>
        <type value="unload"/>
        <name value="unload"/>
        <image path="images/worker.bmp"/>
        <unit-requirements/>
        <upgrade-requirements/>
        <unload-skill value="unload_skill"/>
        </command>
      </commands>
    </actions>
  </creatable-type>
    <selection-sounds enabled="true">
      <sound path="sounds/tech_click.wav" />
    </selection-sounds>
    <command-sounds enabled="true">
      <sound path="sounds/tech_click.wav" />
    </command-sounds>
</unit>
