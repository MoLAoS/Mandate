<?xml version="1.0" standalone="no"?>
<unit>
  <parameters>
    <armor-type value="void"/>
    <time value="25"/>
    <multi-selection value="true"/>
    <fields>
      <field value="land"/>
    </fields>
    <properties>
      <property value="burnable"/>
    </properties>
    <tags>
      <tag value="building"/>
      <tag value="producer"/>
    </tags>
    <meeting-point value="false"/>
    <cellmap value="false"/>
  </parameters>
  <item-limit limit="60"/>
  <creatable-type>
    <size value="3"/>
    <height value="2"/>
    <statistics>
      <enhancement>
	<resource-pools>
	  <health name="health">
	    <max-stat value="750"/>
	  </health>
	</resource-pools>
	<unit-stats>
	  <sight value="10" value-mult="0"/>
	</unit-stats>
      </enhancement>
    </statistics>
    <producible>
      <time value="10"/>
      <properties/>
      <light enabled="false"/>
      <unit-requirements/>
      <upgrade-requirements/>
        <resource-requirements>
          <resource name="population" amount="5" plus="0" multiply="0"/>
        </resource-requirements>
        <local-requirements>
          <resource name="wealth" amount="500" plus="0" multiply="0"/>
          <resource name="logs" amount="10" plus="0" multiply="0"/>
        </local-requirements>
      <image path="images/warriors_hall.bmp"/>
      <image-cancel path="../castle/images/tech_cancel.bmp"/>
      </producible>
    <resource-production>
      <resources-stored>
        <resource name="wealth" amount="100000"/>
        <resource name="stone" amount="10000"/>
      </resources-stored>
      <resources-created>
        <resource name="stone" amount="1" timer="120" scope="local"/>
      </resources-created>
      <starter-resources>
        <resource name="stone" amount="100"/>
      </starter-resources>
    </resource-production>
    <actions>
      <skills>
        <skill>
          <type value="stop"/>
          <name value="stop_skill"/>
          <ep-cost value="0" />
          <speed value="50" />
	  <sounds-animations> 
            <anim-speed value="100" />
            <animation path="models/warriors_hall.g3d" />
            <sound enabled="false" />
	  </sounds-animations> 
        </skill>
        <skill>
          <type value="be_built" />
          <name value="be_built_skill"/>
          <ep-cost value="0" />
          <speed value="300" />
	  <sounds-animations> 
            <anim-speed value="300" />
            <animation path="models/warriors_construct.g3d" />
            <sound enabled="false" />
	  </sounds-animations> 
        </skill>
        <skill>
          <type value="produce" />
          <name value="produce_skill"/>
          <ep-cost value="0" />
          <speed value="300" />
	  <sounds-animations> 
            <anim-speed value="300" />
            <animation path="models/warriors_hall.g3d" />
            <sound enabled="false" />
	  </sounds-animations> 
        </skill>
        <skill>
          <type value="die" />
          <name value="die_skill"/>
          <ep-cost value="0" />
          <speed value="300" />
	  <sounds-animations> 
            <anim-speed value="300" />
            <animation path="models/warriors_hall_destruct.g3d" />
            <sound enabled="true" start-time="0">
              <sound-file path="sounds/tech_building_fall4.wav"/>
            </sound>
	  </sounds-animations> 
          <fade value="false"/>
        </skill>
      </skills>
      <commands>
        <command>
          <type value="produce"/>
          <name value="produce_stone_cutter" tip="stone_cutter_info"/>
          <image path="../stone_cutter/images/worker.bmp"/>
          <unit-requirements />
          <upgrade-requirements />
	  <child-structure child-building="true"/>
          <produce-skill value="produce_skill"/>
          <produced-unit name="stone_cutter"/>
        </command>
      </commands>
    </actions>
  </creatable-type>
    <selection-sounds enabled="true">
      <sound path="sounds/tech_click.wav" />
    </selection-sounds>
    <command-sounds enabled="true">
      <sound path="sounds/tech_click.wav" />
    </command-sounds>
</unit>
