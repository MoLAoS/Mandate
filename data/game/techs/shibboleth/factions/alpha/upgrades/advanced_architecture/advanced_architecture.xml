<?xml version="1.0" standalone="no"?>

<upgrade>
  <image path="images/advanced_architecture.bmp"/>
  <image-cancel path="images/tech_upgrade_cancel.bmp"/>
  <time value="200"/>
  <unit-requirements/>
  <upgrade-requirements/>
  <resource-requirements>
    <resource name="wood" amount="100"/>
    <resource name="gold" amount="200"/>
  </resource-requirements>


	<enhancements>
		
		<enhancement> <!-- Increase resource storage capacity of Castle -->
			<affects>
				<unit name="castle"/>
			</affects>
			<effects>
				<store-modifier>
					<resource type="gold"  addition="300"/>
					<resource type="stone" addition="400"/>
					<resource type="wood"  addition="500"/>
				</store-modifier>
			</effects>
		</enhancement>
		
		<enhancement> <!-- Make Catapult construction cost 50 less wood -->
			<affects>
				<unit name="catapult"/>
			</affects>
			<effects>
				<cost-modifier>
					<resource type="wood"  addition="-50"/>
				</cost-modifier>
			</effects>
		</enhancement>
		
	</enhancements>

</upgrade>