<?xml version="1.0" standalone="no"?>

<upgrade>
	<image path="images/training_field.bmp"/>
	<image-cancel path="../advanced_architecture/images/tech_upgrade_cancel.bmp"/>
	<time value="300"/>
	<unit-requirements/>
	<upgrade-requirements/>
	<resource-requirements>
		<resource name="gold" amount="150"/>
		<resource name="wood" amount="150"/>
	</resource-requirements>

	<enhancements>
		
		<enhancement> <!-- Increase production speed of Barracks -->
			<affects>
				<unit name="barracks"/>
			</affects>
			<effects>
				<static-modifiers>
					<production-speed value="150"/>
				</static-modifiers>
			</effects>
		</enhancement>
		
		<enhancement> <!-- Give all 'warriors' (all units tagged as 'warrior') a small attack boost -->
			<affects>
				<tag name="warrior"/>
			</affects>
			<effects>
				<static-modifiers>
					<attack-strength value="30"/>
				</static-modifiers>
			</effects>
		</enhancement>
		
	</enhancements>

</upgrade>
