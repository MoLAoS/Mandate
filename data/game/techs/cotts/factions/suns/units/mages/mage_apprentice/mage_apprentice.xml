<?xml version="1.0" standalone="no"?>

<unit>
  <parameters>
    <size value="1"/>
    <height value="2"/>
    <max-hp value="150" regeneration="1"/>
    <max-ep value="75" regeneration="1"/>
    <armor value="10"/>
    <armor-type value="leather"/>
    <sight value="9"/>
    <time value="40"/>
    <multi-selection value="true"/>
    <cellmap value="false"/>
