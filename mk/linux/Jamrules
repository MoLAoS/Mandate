if ! $(top_builddir)
{
    top_builddir = $(TOP) ;
}
top_srcdir = $(TOP) ;

JAMCONFIG ?= $(top_builddir)/Jamconfig ;
include $(JAMCONFIG) ;
if ! $(JAMCONFIG_READ)
{
  EXIT "Couldn't find config. Please run 'configure' first." ;
}

if $(USE_STLPORT_DEBUG)
{
  CPPFLAGS += -I/usr/include/stlport ;
  CPPFLAGS += -D_STLP_DEBUG=1 -D_STLP_DEBUG_UNINITIALIZED=1 ;
  CPPFLAGS += -D_STLP_SHRED_BYTE=0xA3 ;
  LIBS += -lstlport_gcc_debug ;
}

COMPILER_WARNING_FLAGS     += -Wall -W -Wno-unused -Wno-sign-compare
                              -fno-strict-aliasing ;
#COMPILER_MORE_WARNING_FLAGS = -Winit-self -Wmissing-include-dirs -Wwrite-strings -Wextra -Winvalid-pch -Weffc++ -Wswitch-enum -Wcast-align ;
COMPILER_MORE_WARNING_FLAGS = -Winit-self -Wmissing-include-dirs -Wwrite-strings -Wextra -Winvalid-pch -Wcast-align ;
COMPILER_INLINE_WARNING_FLAGS = -Winline ;
COMPILER_CFLAGS            += $(COMPILER_WARNING_FLAGS) -Werror-implicit-function-declaration ;
COMPILER_CXXFLAGS          += $(COMPILER_WARNING_FLAGS) ;
COMPILER_CFLAGS_optimize   += -O3 -DNDEBUG -ffast-math -ftree-vectorize $(COMPILER_MORE_WARNING_FLAGS) ;
COMPILER_CXXFLAGS_optimize += -O3 -DNDEBUG -ffast-math -ftree-vectorize $(COMPILER_MORE_WARNING_FLAGS) ;
COMPILER_LIBS_optimize     += ;
COMPILER_CFLAGS_debug      += -DDEBUG -g3 $(COMPILER_MORE_WARNING_FLAGS) ;
COMPILER_CXXFLAGS_debug    += -DDEBUG -g3 $(COMPILER_MORE_WARNING_FLAGS) ;
COMPILER_LIBS_debug        += -g3 $(COMPILER_MORE_WARNING_FLAGS) ;
COMPILER_CFLAGS_profile    += -O3 -pg -ffast-math -ftree-vectorize ;
COMPILER_CXXFLAGS_profile  += -O3 -pg -ffast-math -ftree-vectorize ;
COMPILER_LIBS_profile      += -pg ;

LINK = $(CXX) ;

# Include build rules
include $(TOP)/mk/jam/build.jam ;

# Include Dirs
IncludeDir $(top_builddir) ; # for config.h
