SubDir TOP ;

UseAutoconf ;

Package license.txt readme.txt ;

#### Library ####
SubDir TOP shared_lib ;

LIB_DIRS =
	platform
	platform/sdl
	platform/posix
	util
	graphics
	graphics/gl
	sound
	sound/openal
	tinyxml
	xml
	lua
;

for i in $(LIB_DIRS) {
	LIB_SOURCES += [ Wildcard sources/$(i) : *.c *.cpp *.h ] ;
}

LIB_INCLUDE_DIRS = include include/$(LIB_DIRS) ;

CPPFLAGS += -DDEBUG_RENDERING_ENABLED ;

if $(USE_PCH) = "yes" {
	LIB_PCH = include/pch.h ;
	CPPFLAGS += -DUSE_PCH=1 [ CreateIncludeFlags $(LOCATE_TARGET)/include ] ;
}

Library glestlib : $(LIB_SOURCES) : : $(LIB_PCH) ;
ExternalLibs glestlib : SDL GL GLU VORBISFILE OPENAL LUA Z ;
IncludeDir glestlib : $(LIB_INCLUDE_DIRS) ;

#### Game ####
SubDir TOP game ;

GLEST_DIRS =
	.
	ai
	facilities
	game
	global
	graphics
	gui
	main
	menu
	network
	path_finder
	sound
	type_instances
	types
	world
;

for i in $(GLEST_DIRS) {
  GLEST_SOURCES += [ Wildcard $(i) : *.cpp *.h ] ;
}

if $(USE_PCH) = "yes" {
	GLEST_PCH = pch.h ;
#	CPPFLAGS += -DUSE_PCH=1 [ CreateIncludeFlags $(LOCATE_TARGET)/include ] ;
}

Application glestadv : $(GLEST_SOURCES) : : $(GLEST_PCH) ;
LinkWith glestadv : glestlib ;
ExternalLibs glestadv : SDL GL GLU VORBISFILE OPENAL LUA Z ;
IncludeDir glestadv : ../shared_lib/$(LIB_INCLUDE_DIRS) $(GLEST_DIRS) ;

if $(WX_AVAILABLE) = "yes" {
#### Editor ####
  SubDir TOP map_editor ;

  GLEST_MAP_DIRS = . ;
  for i in $(GLEST_DIRS) {
    GLEST_MAP_SOURCES += [ Wildcard $(i) : *.cpp *.h ] ;
  }

  Application editor : $(GLEST_MAP_SOURCES) ;
  LinkWith editor : glestlib ;
  ExternalLibs editor : SDL GL GLU WX ;
  IncludeDir editor : ../shared_lib/$(LIB_INCLUDE_DIRS) $(GLEST_MAP_DIRS) ;

### Viewer ###
  SubDir TOP g3d_viewer ;

  GLEST_VIEWER_DIRS = . ;
  for i in $(GLEST_DIRS) {
    GLEST_VIEWER_SOURCES += [ Wildcard $(i) : *.cpp *.h ] ;
  }

  Application glest_g3dviewer : $(GLEST_VIEWER_SOURCES) ;
  LinkWith glest_g3dviewer : glestlib ;
  ExternalLibs glest_g3dviewer : SDL GL GLU WX ;
  IncludeDir glest_g3dviewer : ../shared_lib/$(LIB_INCLUDE_DIRS) $(GLEST_VIEWER_DIRS) ;
}

